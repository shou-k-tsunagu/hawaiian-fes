<div
  class="pt-[24px] md:pt-[60px] pb-[87px] mb:pb-[61px] md:pb-[124px] relative w-full px-[15px]"
>
  <!-- <Image src={mvTopImage} alt="" class="w-full h-full object-cover hidden md:block" id="mvTopImage" /> -->
